pipeline {
    agent any
    tools {
        maven "MAVEN"
        jdk "JAVA"
    }
    stages {
        stage('Initialize'){
            steps{
                echo "PATH = ${M2_HOME}/bin:${PATH}"
                echo "M2_HOME = /opt/maven"
            }
        }

		stage('Checkout') {
		  steps {
			script {
				checkout([$class: 'GitSCM', branches: [[name: '*/master']], userRemoteConfigs: [[url: 'https://github.com/slavasolovyov/demo.git']]])
			}
		  }
		}
        stage('Build') {
            steps {
                sh 'mvn clean test'
                // dir("/var/lib/jenkins/workspace/demopipelinetask/my-app") {
                // sh 'mvn -B -DskipTests clean package'
                // }
            }
        }
     }
    post {
       always {
          junit(
        allowEmptyResults: true,
        testResults: '*/test-reports/.xml'
      )
      }
   }
}