pipeline {
    agent any
    tools {
        maven "MAVEN"
        jdk "JAVA"
        allure "ALLURE"
    }
    stages {
        stage('Initialize'){
            steps{
                echo "PATH = ${M2_HOME}/bin:${PATH}"
                echo "M2_HOME = /opt/maven"
            }
        }

// 		stage('Checkout') {
// 		  steps {
// 			script {
// 				checkout([$class: 'GitSCM', branches: [[name: '*/master']], userRemoteConfigs: [[url: 'https://github.com/slavasolovyov/demo.git']]])
// 			}
// 		  }
// 		}
        stage('Build') {
            steps {
                sh 'mvn clean test'
//                  dir("/var/jenkins_home/workspace/testPipe/test") {
//                  sh 'mvn clean test'
                // sh 'mvn -B -DskipTests clean package'
//                 }
            }
        }
        stage('reports') {
            steps {
            script {
                    allure([
                            includeProperties: false,
                            jdk: '',
                            properties: [],
                            reportBuildPolicy: 'ALWAYS',
                            results: [[path: 'target/allure-results']]
                    ])
            }
            }
        }
     }
    post {
       always {
          junit(
        allowEmptyResults: true,
        testResults: '*/test-reports/.xml'
      )
      }
   }
}